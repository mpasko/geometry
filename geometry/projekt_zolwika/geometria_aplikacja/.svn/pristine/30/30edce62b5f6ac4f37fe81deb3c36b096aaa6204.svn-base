import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.Point2D;


class PointModel{
	public static int pointW = 5;
	
	public Point2D.Float point;
	public Color color;
	public String label;
	
	public PointModel(Point2D p, Color c, String l){
		point = new Point2D.Float((float)p.getX(), (float)p.getY());
		color = c;
		label = l;
	}
	
	public void Draw(Graphics2D g2d){
		g2d.setColor(color);
		g2d.drawRect((int)(point.x - pointW), (int)(point.y - pointW), 2*pointW, 2*pointW);
	}
}
